import boto3
import pandas as pd

# Definición de la función de conversión de timestamps
def convert_timestamps(df):
    for col in df.columns:
        if pd.api.types.is_datetime64_any_dtype(df[col]):
            df[col] = df[col].dt.strftime('%Y-%m-%dT%H:%M:%SZ')
    return df

# Aplicar la función a cada DataFrame relevante
fecha_info = convert_timestamps(fecha_info)
identificador = convert_timestamps(identificador)
info_general = convert_timestamps(info_general)
detalle_2 = convert_timestamps(detalle_2)
detalle_3 = convert_timestamps(detalle_3)
detalle_4 = convert_timestamps(detalle_4)
detalle_5 = convert_timestamps(detalle_5)
detalle_6 = convert_timestamps(detalle_6)
detalle_A = convert_timestamps(detalle_A)

# Crear el ítem final para subir a DynamoDB
item_to_insert = {
    "CLIENT_ID": "1_R-X",
    "Informacion_Instrumento": {
        "CLIENT_ID": "Nombre del Instrumento",
        "Fecha_Informacion": dataframe_to_dict(fecha_info),
        "Info_Identificador": dataframe_to_dict(identificador),
        "Informacion_General": dataframe_to_dict(info_general),
        "Proyectos_Participantes": dataframe_to_dict(detalle_2),
        "Activos_Composicion": dataframe_to_dict(detalle_3),
        "Gastos_Comisiones": dataframe_to_dict(detalle_4),
        "Coinversionistas": dataframe_to_dict(detalle_5),
        "Llamadas_Capital": dataframe_to_dict(detalle_6),
        "Distribuciones Pagadas": dataframe_to_dict(detalle_A)
    }
}


